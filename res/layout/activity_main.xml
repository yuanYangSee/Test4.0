<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.test4_0.MainActivity" >

    <Button
        android:id="@+id/btn_open_device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:text="Open" />
    
    <Button
        android:id="@+id/btn_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btn_open_device"
        android:text="reset" />
    
     <Button
        android:id="@+id/btn_get_max_lnu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       	android:layout_alignParentTop="true"
       	android:layout_alignParentRight="true"
        android:text="GetMaxLnu" />
     
     <Button
        android:id="@+id/btn_verify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_open_device"
        android:layout_alignParentLeft="true"
        android:text="握手" />

    <Button
        android:id="@+id/btn_data_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_open_device"
        android:layout_toRightOf="@id/btn_verify"
        android:text="测试" />
    

    

    

   

    <TextView
        android:id="@+id/ReturnData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/btn_verify"
        android:layout_marginTop="51dp"
        android:scrollbars="vertical"
        android:text="ReturnData:" />

    <Button
        android:id="@+id/test2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_open_device"
        android:layout_toRightOf="@id/btn_data_up"
        android:text="测试2" />
    
</RelativeLayout>
